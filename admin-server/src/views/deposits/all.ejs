<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title><%= title || "All Deposits" %> â€” Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="/static/admin.css" rel="stylesheet" />
    <style>
      /* Centered, slightly scaled, with scrolls */

      body,
      .app {
        margin: 0;
      }

      /* Page can scroll both ways if needed */
      .cp-desktop-wrap {
        width: 100%;
        height: 100%;
        background: #f7f7f7;
        overflow-x: auto; /* horizontal scroll on demand */
        overflow-y: auto; /* vertical scroll on demand   */
        scrollbar-gutter: stable both-edges;
      }

      /* Center the right-side content block */
      .cp-desktop {
        min-width: 1280px;
        min-height: 100vh;
        display: flex;
        justify-content: center; /* keep content centered */
      }

      /* Make it bigger than before, but still fit smaller screens */
      .cp-scale {
        transform-origin: top left;
        transform: scale(0.85); /* a little bigger */
        width: calc(100% / 0.85); /* width compensation to avoid squish */
      }
      /* Step down a touch as screens narrow */
      @media (max-width: 1300px) {
        .cp-scale {
          transform: scale(0.82);
          width: calc(100% / 0.82);
        }
      }
      @media (max-width: 1150px) {
        .cp-scale {
          transform: scale(0.8);
          width: calc(100% / 0.8);
        }
      }
      @media (max-width: 1000px) {
        .cp-scale {
          transform: scale(0.78);
          width: calc(100% / 0.78);
        }
      }
      @media (max-width: 850px) {
        .cp-scale {
          transform: scale(0.76);
          width: calc(100% / 0.76);
        }
      }
      @media (max-width: 700px) {
        .cp-scale {
          transform: scale(0.74);
          width: calc(100% / 0.74);
        }
      }
      @media (max-width: 560px) {
        .cp-scale {
          transform: scale(0.72);
          width: calc(100% / 0.72);
        }
      }
      @media (max-width: 480px) {
        .cp-scale {
          transform: scale(0.7);
          width: calc(100% / 0.7);
        }
      }

      /* Keep a consistent desktop width; it stays centered inside .cp-desktop */
      .container {
        max-width: 1280px;
        width: 1280px;
        margin: 24px auto;
        /* your shared theme handles padding/borders/shadows */
      }

      /* Table: allow its own horizontal scroll if needed */
      .table-wrap {
        overflow-x: auto;
      }

      /* Slightly tighter than default, but readable with the bigger scale */
      .page-head h1 {
        margin: 0 0 10px;
        font-size: 1.25rem;
        font-weight: 800;
      }
      .card {
        margin-bottom: 18px;
        padding: 16px 14px;
      }
      .table {
        font-size: 0.95rem;
      }
      .table th,
      .table td {
        padding: 10px 9px;
      }
      .t-right {
        text-align: right;
      }
      .badge {
        padding: 5px 9px;
        font-size: 0.9rem;
        border-radius: 999px;
      }
      .mono {
        font-size: 0.92rem;
      }
    </style>
  </head>
  <body class="app">
    <div class="cp-desktop-wrap">
      <div class="cp-desktop">
        <div class="cp-scale">
          <main class="container">
            <header class="page-head">
              <h1><%= title || "All Deposits" %></h1>

              <form
                method="get"
                class="search"
                id="deposit-search-form"
                style="
                  display: flex;
                  gap: 8px;
                  flex-wrap: wrap;
                  margin-top: 8px;
                "
              >
                <input
                  name="q"
                  placeholder="Search email / txid / coin"
                  value="<%= query || '' %>"
                  aria-label="Search deposits"
                />
                <select
                  name="status"
                  id="deposit-status-select"
                  aria-label="Filter by status"
                >
                  <option value="all">All</option>
                  <option value="pending">Pending</option>
                  <option value="approved">Approved</option>
                  <option value="rejected">Rejected</option>
                </select>
                <button type="submit" class="cp-btn cp-btn-primary">Go</button>
              </form>

              <script>
                document.addEventListener("DOMContentLoaded", function () {
                  var select = document.getElementById("deposit-status-select");
                  select.value = location.pathname.includes("pending")
                    ? "pending"
                    : location.pathname.includes("approved")
                    ? "approved"
                    : location.pathname.includes("rejected")
                    ? "rejected"
                    : "all";
                  select.addEventListener("change", function () {
                    location.href =
                      select.value === "pending"
                        ? "/admin/deposits/pending"
                        : select.value === "approved"
                        ? "/admin/deposits/approved"
                        : select.value === "rejected"
                        ? "/admin/deposits/rejected"
                        : "/admin/deposits/all";
                  });
                });
              </script>
            </header>

            <section class="card" aria-labelledby="table-title">
              <h2
                id="table-title"
                style="
                  margin: 0 0 10px;
                  font-size: 1.02rem;
                  color: #4b2808;
                  font-weight: 800;
                "
              >
                Deposits
              </h2>

              <div class="table-wrap">
                <table class="table" aria-describedby="table-title">
                  <thead>
                    <tr>
                      <th scope="col">ID</th>
                      <th scope="col">User</th>
                      <th scope="col">Coin</th>
                      <th scope="col" class="t-right">Amount</th>
                      <th scope="col">Status</th>
                      <th scope="col">TXID</th>
                      <th scope="col">Address</th>
                      <th scope="col">Created</th>
                      <th scope="col">Approved</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!items || items.length === 0) { %>
                    <tr>
                      <td
                        colspan="9"
                        class="muted"
                        style="text-align: center; padding: 16px"
                      >
                        No deposits found.
                      </td>
                    </tr>
                    <% } %> <% (items || []).forEach(function(row){ %>
                    <tr>
                      <td>#<%= row.id %></td>
                      <td><%= row.user_email || row.user_id %></td>
                      <td><%= row.coin %></td>
                      <td class="t-right">
                        <%= Number(row.amount || 0).toLocaleString() %>
                      </td>
                      <td>
                        <% var col = row.status === 'approved' ? 'badge-success'
                        : (row.status === 'pending' ? 'badge-warn' : (row.status
                        === 'rejected' ? 'badge-danger' : '')); %>
                        <span class="badge <%= col %>"><%= row.status %></span>
                      </td>
                      <td class="mono"><%= row.txid || "-" %></td>
                      <td class="mono"><%= row.address_used || "-" %></td>
                      <td><%= new Date(row.created_at).toLocaleString() %></td>
                      <td>
                        <%= row.approved_at ? new
                        Date(row.approved_at).toLocaleString() : "-" %>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>

              <% if (typeof pageInfo !== 'undefined' && pageInfo) { %> <%-
              include('../partials/pagination', { pageInfo: pageInfo }) %> <% }
              %>
            </section>
          </main>
        </div>
      </div>
    </div>
  </body>
</html>
