<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= title ? `${title} - Crypto Prime Admin` : 'Crypto Prime - Admin' %>
    </title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/line-awesome/1.3.0/line-awesome/css/line-awesome.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    />

    <link rel="stylesheet" href="/admin.css" />
  </head>
  <body class="cp-body">
    <aside class="cp-sidebar">
      <%- include('partials/sidebar', { active: typeof active !== 'undefined' ?
      active : '' }) %>
    </aside>

    <div class="cp-main">
      <%- include('partials/navbar', { user: typeof user !== 'undefined' ? user
      : {} }) %>
      <div class="cp-content"><%- body %></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- one-shot boot payload for toast (set via req.session.toast) -->
    <script type="application/json" id="boot-toast">
      <%- JSON.stringify(typeof toast !== 'undefined' ? toast : null) %>
    </script>

    <!-- modern toast module -->
    <script type="module">
      import { toast, toastSuccess, toastError, toastInfo } from "/js/toast.js";
      // Optional convenience for child views:
      window.__cp_toast__ = { toast, toastSuccess, toastError, toastInfo };
      // Module auto-reads #boot-toast and shows it if present.
    </script>
  </body>
</html>
