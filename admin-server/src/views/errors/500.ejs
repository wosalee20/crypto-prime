<div class="max-w-3xl mx-auto px-6 py-12">
  <h1 class="text-2xl font-bold mb-2"><%= title || 'Server Error' %></h1>
  <p class="text-neutral-300 mb-6">
    Something went wrong while processing your request.
  </p>

  <% if (stack) { %>
  <pre
    class="bg-neutral-900 border border-white/10 rounded p-4 text-xs overflow-auto"
  >
<%= stack %></pre
  >
  <% } else if (message) { %>
  <p class="text-neutral-400"><%= message %></p>
  <% } %>

  <div class="mt-8">
    <a
      href="/admin"
      class="inline-block px-4 py-2 rounded bg-yellow-400 text-neutral-900"
      >Go to Admin</a
    >
  </div>
</div>
