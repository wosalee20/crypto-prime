<div
  class="sidebar capsule--rounded bg_img overlay--dark"
  data-background="https://allcoinstakes.com/assets/img/signup-bg.jpg"
>
  <button class="res-sidebar-close-btn"><i class="las la-times"></i></button>
  <div class="sidebar__inner">
    <div class="sidebar__logo">
      <a href="/admin/dashboard" class="sidebar__main-logo">
        <img
          src="https://allcoinstakes.com/assets/images/logoIcon/logo.png"
          alt="image"
        />
      </a>
      <a href="/admin/dashboard" class="sidebar__logo-shape">
        <img
          src="https://allcoinstakes.com/assets/images/logoIcon/favicon.png"
          alt="image"
        />
      </a>
      <button type="button" class="navbar__expand"></button>
    </div>

    <div class="sidebar__menu-wrapper" id="sidebar__menuWrapper">
      <ul class="sidebar__menu">
        <li
          class="sidebar-menu-item <%= active==='dashboard' ? 'active' : '' %>"
        >
          <a href="/admin/dashboard" class="nav-link">
            <i class="menu-icon las la-home"></i>
            <span class="menu-title">Dashboard</span>
          </a>
        </li>

        <li
          class="sidebar-menu-item <%= active==='deposits' ? 'active' : '' %>"
        >
          <a href="/admin/deposits/pending" class="nav-link">
            <i class="menu-icon las la-credit-card"></i>
            <span class="menu-title">Deposits</span>
          </a>
        </li>

        <li
          class="sidebar-menu-item <%= active==='withdrawals' ? 'active' : '' %>"
        >
          <a href="/admin/withdrawals/pending" class="nav-link">
            <i class="menu-icon la la-bank"></i>
            <span class="menu-title">Withdrawals</span>
          </a>
        </li>

        <li class="sidebar-menu-item <%= active==='users' ? 'active' : '' %>">
          <a href="/admin/users" class="nav-link">
            <i class="menu-icon las la-users"></i>
            <span class="menu-title">Manage Users</span>
          </a>
        </li>

        <li class="sidebar-menu-item <%= active==='plans' ? 'active' : '' %>">
          <a href="/admin/plans" class="nav-link">
            <i class="menu-icon la la-list"></i>
            <span class="menu-title">Plans</span>
          </a>
        </li>

        <li class="sidebar-menu-item <%= active==='wallets' ? 'active' : '' %>">
          <a href="/admin/wallets/company" class="nav-link">
            <i class="menu-icon las la-wallet"></i>
            <span class="menu-title">Company Wallets</span>
          </a>
        </li>

        <li
          class="sidebar-menu-item <%= active==='earnings' ? 'active' : '' %>"
        >
          <a href="/admin/earnings/credit" class="nav-link">
            <i class="menu-icon las la-hand-holding-usd"></i>
            <span class="menu-title">Credit Earnings</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>
